# Development Environment Variables for Docker
# Based on working .env.backup configuration

# -----------------------------------------------------------------------------
# Basic Application Settings
# -----------------------------------------------------------------------------
APP_NAME="faster-dev"
APP_VERSION="0.0.1"
APP_DESCRIPTION="A modern and fast Python web framework (Development)"
ENVIRONMENT="development"
API_PREFIX="/api/v1"

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
HOST="0.0.0.0"
PORT=8000
ACCESS_LOG=True
RELOAD_DIRS="[]"
RELOAD_INCLUDES="[]"
RELOAD_EXCLUDES="[]"
ALLOWED_HOSTS='["*"]'

# -----------------------------------------------------------------------------
# Database Settings - SQLite for development
# -----------------------------------------------------------------------------
DATABASE_URL="sqlite+aiosqlite:///./data/dev.db"
DATABASE_ECHO=False

# -----------------------------------------------------------------------------
# Redis Settings - Local Redis container
# -----------------------------------------------------------------------------
REDIS_PROVIDER="local"
REDIS_URL="redis://redis:6379/0"
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=True
REDIS_ENABLED=True

# -----------------------------------------------------------------------------
# Supabase Settings - Same as working config
# -----------------------------------------------------------------------------
SUPABASE_URL=""
SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""
SUPABASE_JWKS_URL=""
SUPABASE_AUDIENCE="authenticated"
AUTO_REFRESH_JWKS=True

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
AUTH_ENABLED=True
JWKS_CACHE_TTL_SECONDS=3600
USER_CACHE_TTL_SECONDS=3600
CORS_ORIGINS='["*"]'
CORS_CREDENTIALS=True
CORS_ENABLED=True
CORS_ALLOW_METHODS='["*"]'
CORS_ALLOW_HEADERS='["*"]'
CORS_EXPOSE_HEADERS='[]'
GZIP_ENABLED=True
GZIP_MIN_SIZE=1000
TRUSTED_HOSTS='["*"]'

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------
LOG_LEVEL="DEBUG"
LOG_FORMAT="console"
LOG_FILE="./logs/app.log"

# -----------------------------------------------------------------------------
# Sentry Settings - Same as working config
# -----------------------------------------------------------------------------
SENTRY_DSN=""
SENTRY_TRACE_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_CLIENT_DSN=""
SENTRY_TIMEOUT=10
SENTRY_RETRIES=3
SENTRY_SHUTDOWN_TIMEOUT=5

# -----------------------------------------------------------------------------
# Docker-specific Settings
# -----------------------------------------------------------------------------
PYTHONPATH=/app
PYTHONUNBUFFERED=1
