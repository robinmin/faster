# Production Environment Variables for Docker
# Based on working .env.backup configuration - Production optimized

# -----------------------------------------------------------------------------
# Basic Application Settings
# -----------------------------------------------------------------------------
APP_NAME="faster"
APP_VERSION="0.0.1"
APP_DESCRIPTION="A modern and fast Python web framework"
ENVIRONMENT="production"
API_PREFIX="/api/v1"

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
HOST="0.0.0.0"
PORT=8000
WORKERS=4
ACCESS_LOG=True
LIMIT_CONCURRENCY=100
LIMIT_MAX_REQUESTS=1000
TIMEOUT_KEEP_ALIVE=5
ALLOWED_HOSTS='["*"]'

# -----------------------------------------------------------------------------
# Database Settings - Persistent SQLite for production
# -----------------------------------------------------------------------------
DATABASE_URL="d1+binding://DB"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DATABASE_ECHO=False

# -----------------------------------------------------------------------------
# Redis Settings - Local Redis with persistence
# -----------------------------------------------------------------------------
REDIS_PROVIDER="local"
REDIS_URL="redis://redis:6379/0"
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=True
REDIS_ENABLED=True

# -----------------------------------------------------------------------------
# Supabase Settings - Same as working config
# -----------------------------------------------------------------------------
SUPABASE_URL=""
SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""
SUPABASE_JWKS_URL=""
SUPABASE_AUDIENCE="authenticated"
AUTO_REFRESH_JWKS=True

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
AUTH_ENABLED=True
JWKS_CACHE_TTL_SECONDS=3600
USER_CACHE_TTL_SECONDS=3600
CORS_ORIGINS='["https://your-frontend.com"]'
CORS_CREDENTIALS=True
CORS_ENABLED=True
CORS_ALLOW_METHODS='["GET", "POST", "PUT", "DELETE", "OPTIONS"]'
CORS_ALLOW_HEADERS='["*"]'
CORS_EXPOSE_HEADERS='[]'
GZIP_ENABLED=True
GZIP_MIN_SIZE=1000
TRUSTED_HOSTS='["*"]'

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="./logs/app.log"

# -----------------------------------------------------------------------------
# Sentry Settings - Same as working config
# -----------------------------------------------------------------------------
SENTRY_DSN=""
SENTRY_TRACE_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_CLIENT_DSN=""
SENTRY_TIMEOUT=10
SENTRY_RETRIES=3
SENTRY_SHUTDOWN_TIMEOUT=5

# -----------------------------------------------------------------------------
# Docker-specific Settings
# -----------------------------------------------------------------------------
PYTHONPATH=/app
PYTHONUNBUFFERED=1
