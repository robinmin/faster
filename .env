# Basic Application Settings
APP_NAME="faster"
APP_VERSION="0.0.1"
APP_DESCRIPTION="A modern and fast Python web framework"
ENVIRONMENT="development"
API_PREFIX="/api/v1"

# Server Settings
HOST="0.0.0.0"
PORT=8000
WORKERS=4
ACCESS_LOG=True
TIMEOUT_KEEP_ALIVE=5
ALLOWED_HOSTS='["*"]'

# Database Settings (Required)
DATABASE_URL="sqlite+aiosqlite:///:memory:"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DATABASE_ECHO=False

# Redis Settings (Required,# Provider options: local, upstash, fake)
REDIS_PROVIDER="local"
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=True
REDIS_ENABLED=True

# Celery Settings (Required)
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"
CELERY_TASK_ALWAYS_EAGER=True

# Supabase Settings (Required)
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-key"
SUPABASE_JWKS_URL="https://your-supabase-jwks-url"
SUPABASE_AUDIENCE="your-supabase-audience"
AUTO_REFRESH_JWKS=True

# Stripe Settings (Required)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Security Settings (JWT_SECRET_KEY is Required)
AUTH_ENDABLED=True
JWT_SECRET_KEY="a-very-secret-key-that-you-should-change"
JWT_ALGORITHM="HS256"
JWT_EXPIRY_MINUTES=60

CORS_ORIGINS='["*"]'
CORS_CREDENTIALS=True
CORS_ENABLED=True
CORS_ALLOW_METHODS='["*"]'
CORS_ALLOW_HEADERS='["*"]'
CORS_EXPOSE_HEADERS='[]'
GZIP_ENABLED=True
GZIP_MIN_SIZE=1000
TRUSTED_HOSTS='["*"]'

# Logging Settings
LOG_LEVEL="DEBUG"
LOG_FORMAT="console"
LOG_FILE="./logs/app.log"
