{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload"],
      "jinja": true
    },
    {
      "name": "pytest: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": true // Set to false to debug into installed packages
    },
    {
      "name": "Python Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest", // Or specify the file containing tests with "program": "${workspaceFolder}/path/to/my_tests.py"
      "args": [
        // Add any desired pytest arguments here
        // For example:
        // "${workspaceFolder}/tests", // To run tests from a specific folder
        // "-k", "test_my_specific_feature", // To run tests matching a keyword expression
        // "--exitfirst", // Stop after the first failure
        // "-vv", // Increased verbosity
      ],
      "console": "integratedTerminal",
      "justMyCode": false, // Set to false if you need to debug into library code
      "purpose": ["debug-test"] // Crucial for identifying this as a test debugging configuration
    }
  ]
}
